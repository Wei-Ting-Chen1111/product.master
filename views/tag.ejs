    <div class="container">
      <form onsubmit="return false" style="display: block">
        <div class="row">
          <h4>Create Product Tag</h4>
        <div class="input-group input-group-icon">
        <input type="text" name="tag" id="tag" placeholder="Product Tag"/>
        <div class="input-icon"><i class="fa fa-tag"></i></div>
        </div>
        <div class="input-group input-group-icon">
        <input type="text" name="description" id="description" placeholder="Description"/>
        <div class="input-icon"><i class="fa fa-paragraph"></i></div>
        </div>
        <button onclick="add(this)" style="color: #2564cf; width: 100px; height: 30px; float: right;">Create</button>
        <p id="msg" style="color: red"></p>
      </div>
      </form>
      
    </div>
    <div class="table-wrapper" style="margin-left: 490px; margin-top: 50px; position: fixed; max-width: 60%; width: 60%; overflow: scroll; max-height: 90%;">
      <table class="fl-table" id="table-left">
      <tr>
        <th>Tag Name</th>
        <th>Description</th>
      </tr>
      <% for(ele of data){%>
      <tr>
        <td><%= ele.tagName %></td>
        <td><%= ele.description %></td>
      </tr>

      <% } %>
    </table>
    </div>
  </body>
  <script>
    async function add() {
      const tag = document.getElementById("tag").value;
      const description = document.getElementById("description").value;
      const response = await fetch(`/createTag?tag=${tag}`);
      const data = await response.json();

      if (data.length > 0) {
        document.getElementById("msg").textContent = "Tag name already exists";
        return;
      } else {
        await fetch("/createTag", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ tag: tag, description: description }),
        });
        const table = document.getElementById("table-left");
        const row = table.insertRow();
        const t = row.insertCell(0);
        const d = row.insertCell(1);
        t.textContent = tag;
        d.textContent = description;
      }
    }
  </script>
  
