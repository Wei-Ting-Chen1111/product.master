<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>index</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="navBar.css" />
    <link rel="stylesheet" href="createForm.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="table.css" />
  </head>
  <body>
    <div class="wrapper">
      <header>
        <a href="/index.html">Easy Product</a>
        <form action="/search" class="search">
          <input
            type="search"
            class="searchBar"
            name="product"
            placeholder="Search... "
          />
        </form>
        <nav>
          <ul>
            <li>
              <a href="cart"><i class="fa fa-shopping-cart"></i></a>
            </li>
            <li>
              <a href="account"><i class="fa fa-user"></i></a>
            </li>
            <li>
              <a href="logout"><i class="fa fa-sign-out"></i></a>
            </li>
            <li>
              <a href="#"><i class="fa fa-bars" onclick="openNav()"></i></a>
            </li>
          </ul>
        </nav>
      </header>
      <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"
          >&times;</a
        >
        <a href="index.html"> Home </a>
        <a href="dashboard"> Dashboard </a>
        <a href="product.html"> Product </a>
        <a href="invoice.html"> Invoice </a>
        <a href="vendor.html"> Vendor </a>
        <a href="purchaseOrder.html"> Purchase Order </a>
        <a href="tag">Create Tags</a>
        <a href="vendorPage">Create Vendor</a>

        <a href="upload.html">Upload </a>
      </div>

      <main>
        <div class="container">
          <form onsubmit="return false">
            <br />
            <div class="row" style="margin-top: -10px">
              <h4>Create Vendor</h4>
              <div class="input-group input-group-icon">
                <input
                  type="text"
                  name="vendor"
                  id="vendor"
                  placeholder="Vendor"
                />
                <div class="input-icon"><i class="fa fa-building"></i></div>
              </div>

              <div class="input-group input-group-icon">
                <input
                  type="text"
                  name="contact"
                  id="contact"
                  placeholder="Contact Name"
                />
                <div class="input-icon"><i class="fa fa-user"></i></div>
              </div>
              <div class="input-group input-group-icon">
                <input
                  type="text"
                  name="contactEmail"
                  id="contactEmail"
                  placeholder="Contact Email"
                />
                <div class="input-icon"><i class="fa fa-envelope"></i></div>
              </div>

              <div class="input-group input-group-icon">
                <input
                  type="text"
                  name="paymentContact"
                  id="paymentContact"
                  placeholder="AP Contact"
                />
                <div class="input-icon"><i class="fa fa-user"></i></div>
              </div>

              <div class="input-group input-group-icon">
                <input
                  type="text"
                  name="paymenyEmail"
                  id="paymenyEmail"
                  placeholder="AP Email"
                />
                <div class="input-icon"><i class="fa fa-envelope"></i></div>
              </div>

              <div class="input-group input-group-icon">
                <input
                  type="text"
                  name="salesContact"
                  id="salesContact"
                  placeholder="Sales Contact"
                />
                <div class="input-icon"><i class="fa fa-user"></i></div>
              </div>

              <div class="input-group input-group-icon">
                <input
                  type="text"
                  name="salesEmail"
                  id="salesEmail"
                  placeholder="Sales Email"
                />
                <div class="input-icon"><i class="fa fa-envelope"></i></div>
              </div>

              <div class="input-group input-group-icon">
                <input
                  type="text"
                  name="address"
                  id="address"
                  placeholder="Address"
                />
                <div class="input-icon">
                  <i class="fa fa-location-arrow"></i>
                </div>
              </div>
              <div class="input-group input-group-icon">
                <input
                  type="text"
                  name="payment"
                  id="payment"
                  placeholder="Payment Term"
                />
                <div class="input-icon"><i class="fa fa-money"></i></div>
              </div>
              <button
                onclick="create(this)"
                style="color: #2564cf; width: 100px; height: 30px; float: right"
              >
                Create
              </button>
              <p id="msg" style="color: red"></p>
            </div>
          </form>
        </div>

        <div class="table-wrapper">
          <table class="fl-table" id="table">
            <tr>
              <th>Vendor</th>
              <th>Contact</th>
              <th>Contact Email</th>
              <th>Address</th>
            </tr>
            <% for(ele of data){%>
            <tr>
              <td><%= ele.vendorName %></td>
              <td><%= ele.contact %></td>
              <td><%= ele.contactEmail %></td>
              <td><%= ele.address %></td>
            </tr>

            <% } %>
          </table>
        </div>
      </main>
    </div>
  </body>

  <script src="/script/navBar.js"></script>
  <script src="/script/vendor.js"></script>
</html>
