<div class="container">
  <form onsubmit="return false" style="display: block">
    <br />
    <div class="row" style="margin-top: -10px;">
      <h4>Create Vendor</h4>
      <div class="input-group input-group-icon">
    <input type="text" name="vendor" id="vendor" placeholder="Vendor"/>
    <div class="input-icon"><i class="fa fa-building"></i></div>
      </div>
    
      <div class="input-group input-group-icon">
    <input type="text" name="contact" id="contact" placeholder="Contact Name"/>
    <div class="input-icon"><i class="fa fa-user"></i></div>
    </div>
    <div class="input-group input-group-icon">
    <input type="text" name="contactEmail" id="contactEmail" placeholder="Contact Email"/>
    <div class="input-icon"><i class="fa fa-envelope"></i></div>
    </div>

    <div class="input-group input-group-icon">
    <input type="text" name="paymentContact" id="paymentContact" placeholder="AP Contact"/>
    <div class="input-icon"><i class="fa fa-user"></i></div>
    </div>

    <div class="input-group input-group-icon">
    <input type="text" name="paymenyEmail" id="paymenyEmail" placeholder="AP Email"/>
    <div class="input-icon"><i class="fa fa-envelope"></i></div>
    </div>

    <div class="input-group input-group-icon">
    <input type="text" name="salesContact" id="salesContact" placeholder="Sales Contact"/>
    <div class="input-icon"><i class="fa fa-user"></i></div>
    </div>

    <div class="input-group input-group-icon">
    <input type="text" name="salesEmail" id="salesEmail" placeholder="Sales Email"/>
    <div class="input-icon"><i class="fa fa-envelope"></i></div>
    </div>

    <div class="input-group input-group-icon">
    <input type="text" name="address" id="address" placeholder="Address"/>
    <div class="input-icon"><i class="fa fa-location-arrow"></i></div>
    </div>
    <div class="input-group input-group-icon">
    <input type="text" name="payment" id="payment" placeholder="Payment Term"/>
    <div class="input-icon"><i class="fa fa-money"></i></div>
    </div>
    <button onclick="create(this)" style="color: #2564cf; width: 100px; height: 30px; float: right;">Create</button>
    <p id="msg" style="color: red"></p>
  </div>
  </form>
</div>

<div class="table-wrapper" style="margin-left: 470px; margin-top: 50px; position: fixed; max-width: 60%; width: 60%; overflow: scroll; max-height: 90%;">
  <table class="fl-table" id="table">
      <tr>
        <th>Vendor</th>
        <th>Contact</th>
        <th>Contact Email</th>
        <th>Address</th>
      </tr>
      <% for(ele of data){%>
      <tr>
        <td><%= ele.vendorName %></td>
        <td><%= ele.contact %></td>
        <td><%= ele.contactEmail %></td>
        <td><%= ele.address %></td>
      </tr>

      <% } %>
      
    </table>
  </div>
